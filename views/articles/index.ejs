<!DOCTYPE html>
<html lang="en">
      <head>
            <meta charset="UTF-8" />
            <meta http-equiv="X-UA-Compatible" content="IE=edge" />
            <meta
                  name="viewport"
                  content="width=device-width, initial-scale=1.0"
            />
            <!-- CSS only -->
            <link rel="stylesheet" href="/css/style.css">

            <!-- Bootstrap -->
            <link
                  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
                  rel="stylesheet"
                  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
                  crossorigin="anonymous"
            />

            <!-- FontAwesome -->
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
            <link rel="shortcut icon" href="/images/icone-aba.png">
            <title>Blog</title>
      </head>
      <body id="body">
        <!-- Inicio cabeÃ§alho -->
        <header id="area-cabecalho">
            <h1 class="logo">Blog<span>mer</span></h1>
        </header>

        <div class="container">
            <h1 class="title mt-4"><span>Blog</span> <span id="blog-article">Articles</span></h1>
                <a id="new-article" href="/articles/new" class="btn">
                    New Article
                </a>
                  
            <% articles.forEach(article => { %>
                <div class="col- mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= article.title %></h4>
                        <div id="date" class="card-subtitle mb-2">
                            <%= article.createAt.toLocaleDateString() %>
                        </div>

                        <div class="card-text mb-2">
                            <%= article.description %>
                        </div>

                        <a id="read-more" href="articles/<%= article.slug %>" class="btn">Read More</a>

                        <a id="edit" href="articles/edit/<%= article.id %>" class="btn">Edit</a>

                        <form id="delete" action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                            
                    </div>
                </div>
                  
                  <% }) %>
            </div>

            <footer>
                <div class="text-center col-md-12">
                    <a target="_blank" href="https://github.com/Khaledy30" class="mt-3 mb-3 btn-lg btn btn-outline-light">
                        <i class="fab fa-github"></i>
                    </a>

                    <a target="_blank" href="https://www.linkedin.com/in/aur%C3%A9lio-khaledy/" class="mt-3 mb-3 btn-lg btn btn-outline-light">
                        <i class="fab fa-linkedin"></i>
                    </a>

                    <a target="_blank" href="https://www.instagram.com/khaledy_camargo/" class="mt-3 mb-3 btn-lg btn btn-outline-light">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
            </footer>
      </body>
</html>
