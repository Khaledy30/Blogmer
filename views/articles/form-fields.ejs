<div class="form-group">
    <label class="subtitles" for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
    <label class="subtitles" for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group">
    <label class="subtitles" for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control" cols="20" rows="10"><%= article.markdown %></textarea>
</div>

<a id="cancel" href="/" class="btn btn-secondary mt-4">Cancel</a>

<button id="save" type="submit" class="btn btn-primary mt-4">Save</button>